{
  "name": "context-runner",
  "displayName": "Context Runner",
  "description": "Run custom scripts or commands from context menu with progress and notifications",
  "version": "0.1.0",
  "publisher": "dong4j",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dong4j/context-runner"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "dependencies": {
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.2"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "context-runner.run",
        "title": "%context-runner.command.run%",
        "icon": "$(run)"
      },
      {
        "command": "context-runner.runFolder",
        "title": "%context-runner.command.runFolder%",
        "icon": "$(run-folder)"
      },
      {
        "command": "context-runner.showLog",
        "title": "%context-runner.command.showLog%",
        "icon": "$(output)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceScheme == file",
          "command": "context-runner.run",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "context-runner.runFolder",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "context-runner.run",
          "when": "resourceScheme == file"
        },
        {
          "command": "context-runner.runFolder",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "context-runner.showLog"
        }
      ]
    },
    "configuration": {
      "title": "Context Runner",
      "properties": {
        "context-runner.scriptPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "%context-runner.config.scriptPath%",
          "order": 1
        },
        "context-runner.command": {
          "type": "string",
          "default": "",
          "markdownDescription": "%context-runner.config.command%",
          "order": 2
        },
        "context-runner.logEnabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%context-runner.config.logEnabled%",
          "order": 3
        },
        "context-runner.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "markdownDescription": "%context-runner.config.logLevel%",
          "order": 4
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  }
}
